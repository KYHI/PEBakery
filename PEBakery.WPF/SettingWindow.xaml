<Window x:Class="PEBakery.WPF.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PEBakery.WPF"
        xmlns:btl="clr-namespace:Btl.Controls"
        FontSize="13"
        FontFamily="Segoe UI"
        mc:Ignorable="d"
        Title="PEBakery Setting" Height="300" Width="400">
    <StackPanel>
        <TextBlock
            Margin="20, 20, 20, 0"
            Text="Scale Factor for Plugin Interface"></TextBlock>
        <DockPanel
            Margin="20, 20, 20, 0">
            <TextBlock
                DockPanel.Dock="Right"
                TextAlignment="Right"
                Text="%">
            </TextBlock>
            <TextBlock
                DockPanel.Dock="Right"
                Margin="20, 0, 0, 0"
                Width="40" 
                Name="ScaleFactorBox"
                Text="{Binding ElementName=ScaleFactorSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                TextAlignment="Right">
            </TextBlock>
            <Slider
                Minimum="100" Maximum="200"
                TickPlacement="BottomRight"
                TickFrequency="10"
                IsSnapToTickEnabled="True"
                Name="ScaleFactorSlider"
                Value="{Binding ScaleFactor}">
            </Slider>
        </DockPanel>
        
        <CheckBox
            Margin="20, 20, 20, 0"
            IsEnabled="False"
            Content="Convert all plugins to UTF-8">
        </CheckBox>

        <CheckBox
            Margin="20, 20, 20, 0"
            IsEnabled="False"
            Content="Enable Long File Path Support">
        </CheckBox>


        <Grid
            Margin="40, 10, 20, 0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Row="0" Grid.Column="0"
                Name="DefaultButton"
                Click="DefaultButton_Click"
                Content="Default">
            </Button>
            <Button
                Grid.Row="0" Grid.Column="2"
                IsDefault="True"
                Name="SaveButton"
                Click="SaveButton_Click"
                Content="Save">
            </Button>
            <Button
                Grid.Row="0" Grid.Column="4"
                IsCancel="True"
                Content="Cancel">
            </Button>
        </Grid>
    </StackPanel>
</Window>
