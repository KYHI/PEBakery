<Window x:Class="PEBakery.WPF.UtilityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PEBakery.WPF"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="UtilityWindow"
        FontFamily="Segoe UI"
        FontSize="13"
        Width="800" Height="640"
        MinWidth="640" MinHeight="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Syntax Checker">
                <Grid>
                    
                </Grid>
            </TabItem>
            <TabItem Header="String Escaper">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="10, 10, 10, 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="String to Convert">
                        </TextBlock>
                        <Border
                            Grid.Row="1"
                            BorderBrush="Gray"
                            BorderThickness="1">
                            <TextBox 
                                Grid.Row="1"
                                VerticalContentAlignment="Stretch"
                                Text="{Binding StringToConvert}">
                            </TextBox>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1" Margin="10, 10, 10, 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Content="Escape"
                            Click="EscapeButton_Click">
                        </Button>
                        <Button
                            Grid.Column="2"
                            Content="Unescape"
                            Click="UnescapeButton_Click">
                        </Button>
                        <CheckBox
                            Grid.Column="3"
                            Margin="10, 0, 10, 0"
                            VerticalAlignment="Center"
                            Content="Escape Percent (%)"
                            IsChecked="{Binding EscapePercentChecked}">
                        </CheckBox>
                        <Button
                            Grid.Column="4"
                            Content="Escape Sequence Legend"
                            Click="EscapeSequenceLegend_Click">
                        </Button>
                    </Grid>

                    <Grid Grid.Row="2" Margin="10, 10, 10, 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="Converted String">
                        </TextBlock>
                        <Border
                            Grid.Row="1"
                            BorderBrush="Gray"
                            BorderThickness="1">
                            <TextBox 
                                Grid.Row="1"
                                VerticalContentAlignment="Stretch"
                                Text="{Binding ConvertedString}">
                            </TextBox>
                        </Border>
                    </Grid>
                </Grid>
                
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1" Margin="15, 15, 15, 15">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Button
                Grid.Row="0" Grid.Column="1"
                Content="Close"
                Click="CloseButton_Click">
            </Button>
        </Grid>
    </Grid>
</Window>
