<Window x:Class="PEBakery.WPF.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PEBakery.WPF"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        FontSize="13"
        FontFamily="Segoe UI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Title="PEBakery Setting"
        Width="600" Height="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Projects">
                <StackPanel>
                    <Grid
                        Height="25"
                        Margin="15, 15, 15, 0"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Default Project">
                        </TextBlock>
                        <ComboBox
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding Project_List}"
                            SelectedIndex="{Binding Project_DefaultIndex}">
                        </ComboBox>
                    </Grid>
                    <Grid
                        Height="25"
                        Margin="15, 15, 15, 0"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Project Path Setting">
                        </TextBlock>
                        <ComboBox
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding Project_List}"
                            SelectedIndex="{Binding Project_SelectedIndex}">
                        </ComboBox>
                    </Grid>
                    <Border
                        Margin="15, 15, 15, 0"
                        Height="Auto"
                        BorderBrush="Gray"
                        BorderThickness="1">
                        <StackPanel>
                            <Grid
                            Height="25"
                            Margin="15, 15, 15, 0"
                            VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="30"></ColumnDefinition>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Source Directory">
                                </TextBlock>
                                <ComboBox
                                    Grid.Column="1"
                                    Margin="0, 0, 5, 0"
                                    ItemsSource="{Binding Project_SourceDirectoryList}"
                                    SelectedIndex="{Binding Project_SourceDirectoryIndex}">
                                </ComboBox>
                                <Button
                                    Grid.Column="2"
                                    Margin="0, 0, 5, 0"
                                    Name="Button_SourceDirectory"
                                    Click="Button_SourceDirectory_Click">
                                    <Button.Content>
                                        <iconPacks:PackIconMaterial
                                    Kind="FolderUpload"
                                    Width="Auto"
                                    Height="Auto"
                                    Margin="2"/>
                                    </Button.Content>
                                </Button>
                                <Button
                            Grid.Column="3"
                            Name="Button_ResetSourceDirectory"
                            Click="Button_ResetSourceDirectory_Click">
                                    <Button.Content>
                                        <iconPacks:PackIconMaterial
                                    Kind="Close"
                                    Width="Auto"
                                    Height="Auto"
                                    Margin="4"/>
                                    </Button.Content>
                                </Button>
                            </Grid>
                            <Grid
                        Height="25"
                        Margin="15, 15, 15, 0"
                        VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Target Directory">
                                </TextBlock>
                                <TextBox
                                    Grid.Column="1"
                                    Margin="0, 0, 5, 0"
                                    VerticalContentAlignment="Center"
                                    Text="{Binding Project_TargetDirectory}">
                                </TextBox>
                                <Button
                                    Grid.Column="2"
                                    Name="Button_TargetDirectory"
                                    Click="Button_TargetDirectory_Click">
                                    <Button.Content>
                                        <iconPacks:PackIconMaterial
                                            Kind="FolderUpload"
                                            Width="Auto"
                                            Height="Auto"
                                            Margin="2"/>
                                    </Button.Content>
                                </Button>
                            </Grid>
                            <Grid
                                Height="25"
                                Margin="15, 15, 15, 15"
                                VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="25"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="ISO File">
                                </TextBlock>
                                <TextBox
                                    Grid.Column="1"
                                    Margin="0, 0, 5, 0"
                                    VerticalContentAlignment="Center"
                                    Text="{Binding Project_ISOFile}">
                                </TextBox>
                                <Button
                                    Grid.Column="2"
                                    Name="Button_ISOFile"
                                    Click="Button_ISOFile_Click">
                                    <Button.Content>
                                        <iconPacks:PackIconMaterial
                                            Kind="FolderUpload"
                                            Width="Auto"
                                            Height="Auto"
                                            Margin="2"/>
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>
            <TabItem Header="General">
                <StackPanel>
                    <CheckBox
                        Name="CheckBox_OptimizeCode"
                        Margin="15, 15, 15, 0"
                        Content="Optimize Code"
                        ToolTip="Enabled = Path length is limited to 260&#x0a;Disabled = Path length can be up to 32767"
                        IsChecked="{Binding General_OptimizeCode}">
                    </CheckBox>
                    <CheckBox
                        Name="CheckBox_EnableLongFilePath"
                        Margin="15, 15, 15, 0"
                        Content="Enable Long File Path Support"
                        ToolTip="Enabled = Path length is limited to 260&#x0a;Disabled = Path length can be up to 32767"
                        Click="CheckBox_EnableLongFilePath_Click"
                        IsChecked="{Binding General_EnableLongFilePath}">
                    </CheckBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Interface">
                <StackPanel>
                    <TextBlock
                        Margin="15, 15, 15, 0"
                        Text="Scale Factor for Plugin Interface">
                    </TextBlock>
                    <DockPanel
                        Margin="15, 10, 15, 0">
                        <TextBlock
                            DockPanel.Dock="Right"
                            TextAlignment="Right"
                            Text="%">
                        </TextBlock>
                        <TextBlock
                            DockPanel.Dock="Right"
                            Margin="20, 0, 0, 0"
                            Width="40" 
                            Name="ScaleFactorBox"
                            Text="{Binding ElementName=ScaleFactorSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Right">
                        </TextBlock>
                        <Slider
                            Minimum="100" Maximum="200"
                            TickPlacement="BottomRight"
                            TickFrequency="10"
                            IsSnapToTickEnabled="True"
                            Name="ScaleFactorSlider"
                            Value="{Binding Interface_ScaleFactor}">
                        </Slider>
                    </DockPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Plugin">
                <StackPanel>
                    <CheckBox
                        Name="CheckBox_CachePlugin"
                        Margin="15, 15, 15, 0"
                        VerticalAlignment="Center"
                        Content="Enable Plugin Caching"
                        IsChecked="{Binding Plugin_EnableCache}">
                    </CheckBox>
                    <DockPanel
                        Margin="15, 15, 15, 0"
                        Height="25"
                        VerticalAlignment="Center">
                        <Button
                            Name="Button_ClearCache"
                            DockPanel.Dock="Right"
                            Content="Clear Cache Database"
                            Width="150"
                            Click="Button_ClearCache_Click">
                        </Button>
                        <TextBlock
                            Name="TextBlock_CacheState"
                            Margin="0, 0, 15, 0"
                            VerticalAlignment="Center"
                            Text="{Binding Plugin_CacheState}">
                        </TextBlock>
                    </DockPanel>
                    <CheckBox
                        Name="CheckBox_ConvertToUTF8"
                        Margin="15, 15, 15, 0"
                        Content="Convert Plugins to UTF-8 automatically"
                        ToolTip="Turning on will break compability with WinBuilder 082."
                        IsEnabled="False"
                        IsChecked="{Binding Plugin_ConvertToUTF8}">
                    </CheckBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Log">
                <StackPanel>
                    <Grid
                        Margin="15, 15, 15, 0"
                        VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Debug Level">
                        </TextBlock>
                        <ComboBox
                            Grid.Column="1"
                            Name="ComboBox_LogDebugLevel"
                            ItemsSource="{Binding Log_DebugLevelList}"
                            SelectedIndex="{Binding Log_DebugLevelIndex}">
                        </ComboBox>
                    </Grid>
                    <DockPanel
                        Height="25"
                        Margin="15, 15, 15, 0"
                        VerticalAlignment="Center">
                        <Button
                            Name="Button_ClearLog"
                            DockPanel.Dock="Right"
                            Content="Clear Log Database"
                            Width="150"
                            Click="Button_ClearLog_Click">
                        </Button>
                        <TextBlock
                            Name="TextBlock_LogDBState"
                            VerticalAlignment="Center"
                            Text="{Binding Log_DBState}">
                        </TextBlock>
                    </DockPanel>
                    <CheckBox
                        Name="CheckBox_SaveMacro"
                        Margin="15, 15, 15, 0"
                        Content="Log Macro"
                        IsChecked="{Binding Log_Macro}">
                    </CheckBox>
                    <CheckBox
                        Name="CheckBox_SaveComment"
                        Margin="15, 15, 15, 0"
                        Content="Log Comment"
                        IsChecked="{Binding Log_Comment}">
                    </CheckBox>
                </StackPanel>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1" Margin="15, 15, 15, 15">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="20"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Row="0" Grid.Column="0"
                Name="DefaultButton"
                Click="DefaultButton_Click"
                Content="Default">
            </Button>
            <Button
                Grid.Row="0" Grid.Column="2"
                IsDefault="True"
                Name="SaveButton"
                Click="SaveButton_Click"
                Content="Save">
            </Button>
            <Button
                Grid.Row="0" Grid.Column="4"
                IsCancel="True"
                Content="Cancel">
            </Button>
        </Grid>
    </Grid>
</Window>
